<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.exam.FillQuestionOptionMapper">

    <sql id="column">
        id, title, state, hardLevelId, createTime, updateTime
    </sql>

    <sql id="where">
        <if test="title != null">
            and title = #{title}
        </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.exam.entry.FillQuestionOption">
        select
            <include refid="column" />
        from exam_fill_question_options
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findById" resultType="com.ddky.fms.refund.model.exam.entry.FillQuestionOption">
        select
            <include refid="column" />
        from exam_fill_question_options
        <where>
            id = #{id}
        </where>
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.exam.entry.FillQuestionOption">
        insert into exam_fill_question_options (title, hardLevelId) values (#{title}, #{hardLevelId})
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into exam_fill_question_options (title, hardLevelId)
            values (#{item.title}, #{item.hardLevelId})
        </foreach>
    </insert>

</mapper>
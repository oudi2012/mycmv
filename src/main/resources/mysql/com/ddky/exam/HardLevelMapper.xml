<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.exam.HardLevelMapper">

    <sql id="column">
        id, title, state, orderNo, createTime, updateTime
    </sql>

    <sql id="where">
        <if test="title != null">
            and title = #{title}
        </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.exam.entry.HardLevel">
        select
            <include refid="column" />
        from exam_hard_level
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findById" resultType="com.ddky.fms.refund.model.exam.entry.HardLevel">
        select
            <include refid="column" />
        from exam_hard_level
        <where>
            id = #{id}
        </where>
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.exam.entry.HardLevel">
        insert into exam_hard_level (title, orderNo) values (#{title}, #{orderNo})
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into exam_hard_level (title, orderNo)
            values (#{item.title}, #{item.orderNo})
        </foreach>
    </insert>

    <update id="update" parameterType="com.ddky.fms.refund.model.exam.entry.HardLevel">
        update exam_hard_level
        <set>
            <if test="title != null">  title = #{title}, </if>
            <if test="orderNo != null">  orderNo = #{orderNo}, </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete" parameterType="java.util.List">
        delete from exam_hard_level where id in (
        <foreach collection="idList" index="index" item="item" separator=",">
            #{item}
        </foreach>)
    </delete>
</mapper>
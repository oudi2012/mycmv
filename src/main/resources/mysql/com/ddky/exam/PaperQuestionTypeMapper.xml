<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.exam.PaperQuestionTypeMapper">

    <sql id="column">
        id, examPageId, questionTypeId, createTime, updateTime
    </sql>

    <sql id="where">
        <if test="examPageId != null">
            and examPageId = #{examPageId}
        </if>
        <if test="questionTypeId != null">
            and questionTypeId = #{questionTypeId}
        </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.exam.entry.PaperQuestionType">
        select
            <include refid="column" />
        from exam_paper_question_types
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findById" resultType="com.ddky.fms.refund.model.exam.entry.PaperQuestionType">
        select
            <include refid="column" />
        from exam_paper_question_types
        <where>
            id = #{id}
        </where>
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.exam.entry.PaperQuestionType">
        insert into exam_paper_question_types (examPageId, questionTypeId)
        values (#{examPageId}, #{questionTypeId})
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into exam_paper_question_types (examPageId, questionTypeId)
            values (#{item.examPageId}, #{item.questionTypeId})
        </foreach>
    </insert>

    <update id="update" parameterType="com.ddky.fms.refund.model.exam.entry.PaperQuestionType">
        update exam_paper_question_types
        <set>
            <if test="examPageId != null">  examPageId = #{examPageId}, </if>
            <if test="questionTypeId != null">  questionTypeId = #{questionTypeId}, </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete" parameterType="java.util.List">
        delete from exam_paper_question_types where id in (
        <foreach collection="idList" index="index" item="item" separator=",">
            #{item}
        </foreach>)
    </delete>

</mapper>
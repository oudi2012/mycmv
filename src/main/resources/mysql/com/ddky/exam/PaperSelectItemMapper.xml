<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.exam.PaperSelectItemMapper">

    <sql id="column">
        id, examPageId, questionId, title, itemNo, createTime
    </sql>

    <sql id="where">
        <if test="examPageId != null">
            and examPageId = #{examPageId}
        </if>
        <if test="questionId != null">
            and questionId = #{questionId}
        </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.exam.entry.PaperSelectItem">
        select
            <include refid="column" />
        from exam_paper_select_items
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findById" resultType="com.ddky.fms.refund.model.exam.entry.PaperSelectItem">
        select
            <include refid="column" />
        from exam_paper_select_items
        <where>
            id = #{id}
        </where>
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.exam.entry.PaperSelectItem">
        insert into exam_paper_select_items (examPageId, questionId, title, itemNo)
        values (#{examPageId}, #{questionId}, #{title}, #{itemNo})
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into exam_paper_select_items (examPageId, questionId, title, itemNo)
            values (#{item.examPageId}, #{item.questionId}, #{item.title}, #{item.itemNo})
        </foreach>
    </insert>

</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.CountryInfoMapper">

    <sql id="column">
        id, code, name, orderNo
    </sql>

    <sql id="where">
        <if test="code != null">
            code = #{code}
        </if>
        <if test="name != null">
            name = #{name}
        </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.students.entry.CountryInfo">
        select
            <include refid="column" />
        from stu_country_info
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findByCode" resultType="com.ddky.fms.refund.model.students.entry.CountryInfo">
        select
            <include refid="column" />
        from stu_country_info
        <where>
            code = #{code}
        </where>
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.students.entry.CountryInfo">
        insert into stu_country_info (code, name) values (#{code}, #{name})
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into stu_country_info (code, name)
            values (#{item.code}, #{item.name})
        </foreach>
    </insert>

</mapper>
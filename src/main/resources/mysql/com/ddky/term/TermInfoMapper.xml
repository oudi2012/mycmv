<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.students.TermInfoMapper">

    <sql id="column">
        teamId, theYear, name, type, startTime, endTime, createTime
    </sql>

    <sql id="where">
        <if test="theYear != null">
            and theYear = #{theYear}
        </if>
        <if test="type != null">
            and type = #{type}
        </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.students.entry.TermInfo">
        select
            <include refid="column" />
        from stu_term_info
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findById" resultType="com.ddky.fms.refund.model.students.entry.TermInfo">
        select
            <include refid="column" />
        from stu_term_info
        <where>
            teamId = #{teamId}
        </where>
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.students.entry.TermInfo">
        insert into stu_term_info (theYear, name, type, startTime, endTime, createTime) values
        (#{theYear}, #{name}, #{type}, #{startTime}, #{endTime}, now())
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into stu_term_info (theYear, name, type, startTime, endTime, createTime)
            values (#{item.theYear}, #{item.name}, #{item.type}, #{item.startTime}, #{item.endTime}, now())
        </foreach>
    </insert>

</mapper>
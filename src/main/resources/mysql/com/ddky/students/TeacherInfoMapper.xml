<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.students.TeacherInfoMapper">

    <sql id="column">
        id, phone, userName, passWord, regType, regDate, headImage, areaId, sex, birthDay, realName, schoolId
    </sql>

    <sql id="where">
        <if test="phone != null">and  phone = #{phone} </if>
        <if test="userName != null">and  userName = #{userName} </if>
        <if test="regType != null">and  regType = #{regType} </if>
        <if test="areaId != null">and  areaId = #{areaId} </if>
        <if test="sex != null">and  sex = #{sex} </if>
        <if test="realName != null">and  realName = #{realName} </if>
        <if test="schoolId != null">and  schoolId = #{schoolId} </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.students.entry.TeacherInfo">
        select
            <include refid="column" />
        from stu_teacher_info
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findById" resultType="com.ddky.fms.refund.model.students.entry.TeacherInfo">
        select
            <include refid="column" />
        from stu_teacher_info
        <where>
            id = #{id}
        </where>
    </select>

    <select id="findOne" resultType="com.ddky.fms.refund.model.students.entry.TeacherInfo">
        select
        <include refid="column" />
        from stu_teacher_info
        <where>
            <include refid="where" />
        </where>
        limit 1
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.students.entry.TeacherInfo">
        insert into stu_teacher_info (phone, userName, passWord, regType, regDate, headImage, areaId, sex, birthDay, realName, schoolId)
        values (#{phone}, #{userName}, #{passWord}, #{regType}, now(), #{headImage}, #{areaId}, #{sex}, #{birthDay}, #{realName}, #{schoolId})
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into stu_teacher_info (phone, userName, passWord, regType, regDate, headImage, areaId, sex, birthDay, realName, schoolId, role)
            values (#{item.phone}, #{item.userName}, #{item.passWord}, #{item.regType}, now(), #{item.headImage}, #{item.areaId}, #{item.sex},
            #{item.birthDay}, #{item.realName}, #{item.schoolId})
        </foreach>
    </insert>

    <update id="edit" parameterType="com.ddky.fms.refund.model.students.entry.TeacherInfo">
        update stu_teacher_info
        <set>
            <if test="phone != null"> phone = #{phone}, </if>
            <if test="userName != null"> userName = #{userName}, </if>
            <if test="regType != null"> regType = #{regType}, </if>
            <if test="areaId != null"> areaId = #{areaId}, </if>
            <if test="sex != null"> sex = #{sex}, </if>
            <if test="realName != null"> realName = #{realName}, </if>
            <if test="schoolId != null"> schoolId = #{schoolId}, </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete" parameterType="java.util.List">
        delete from stu_teacher_info where id in (
        <foreach collection="idList" index="index" item="item" separator=",">
            #{item}
        </foreach>)
    </delete>

</mapper>
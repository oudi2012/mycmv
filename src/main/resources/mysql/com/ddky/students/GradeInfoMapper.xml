<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.students.GradeInfoMapper">

    <sql id="column">
       gradeId, name, state, orderNo, createTime
    </sql>

    <sql id="where">
        <if test="name != null">
            and name = #{name}
        </if>
        <if test="orderNo != null">
            and orderNo = #{orderNo}
        </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.students.entry.GradeInfo">
        select
            <include refid="column" />
        from stu_grade_info
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findById" resultType="com.ddky.fms.refund.model.students.entry.GradeInfo">
        select
            <include refid="column" />
        from stu_grade_info
        <where>
            gradeId = #{id}
        </where>
    </select>

    <select id="findByIds" resultType="com.ddky.fms.refund.model.students.entry.GradeInfo">
        select
        <include refid="column" />
        from stu_grade_info
        <where>
            gradeId in (
            <foreach collection="listIds" index="index" item="item" separator=",">
                #{item}
            </foreach>)
        </where>
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.students.entry.GradeInfo">
        insert into stu_grade_info (name, orderNo) values (#{name}, #{orderNo})
    </insert>

    <update id="update" parameterType="com.ddky.fms.refund.model.students.entry.GradeInfo">
        update stu_grade_info
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="orderNo != null">
                orderNo = #{orderNo},
            </if>
        </set>
        <where>
            gradeId = #{gradeId}
        </where>
    </update>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into stu_grade_info (name, orderNo)
            values (#{item.name}, #{item.orderNo})
        </foreach>
    </insert>

    <delete id="delete" parameterType="integer">
        delete from stu_grade_info where gradeId=#{id}
    </delete>

</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.userlogs.ReadNoteMapper">

    <sql id="column">
        id, bookId, pageNo, lineNo, userId, type, content, createDate
    </sql>

    <sql id="where">
        <if test="bookId != null">
            and bookId = #{bookId}
        </if>
        <if test="pageNo != null">
            and pageNo = #{pageNo}
        </if>
        <if test="lineNo != null">
            and lineNo = #{lineNo}
        </if>
        <if test="userId != null">
            and userId = #{userId}
        </if>
        <if test="userId != null">
            and userId = #{userId}
        </if>
        <if test="type != null">
            and type = #{type}
        </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.userlogs.entry.ReadNote">
        select
            <include refid="column" />
        from op_read_note
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findById" resultType="com.ddky.fms.refund.model.userlogs.entry.ReadNote">
        select
            <include refid="column" />
        from op_read_note
        <where>
            shelfId = #{id}
        </where>
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.userlogs.entry.ReadNote">
        insert into op_read_note (bookId, pageNo, lineNo, userId, type, content, createDate)
        values (#{bookId}, #{pageNo}, #{lineNo}, #{userId}, #{type}, #{content}, now())
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into op_read_note (bookId, pageNo, lineNo, userId, type, content, createDate)
            values (#{item.bookId}, #{item.pageNo}, #{item.lineNo}, #{item.userId}, #{item.type}, #{item.content}, now())
        </foreach>
    </insert>

</mapper>
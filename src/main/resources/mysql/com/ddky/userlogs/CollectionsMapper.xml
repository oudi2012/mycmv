<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.userlogs.CollectionsMapper">

    <sql id="column">
        coletId, userId, folderId, infoType, infoId, title, imageIndex, images, tags, createDate
    </sql>

    <sql id="where">
        <if test="userId != null">
            and userId = #{userId}
        </if>
        <if test="folderId != null">
            and folderId = #{folderId}
        </if>
        <if test="infoType != null">
            and infoType = #{infoType}
        </if>
        <if test="infoId != null">
            and infoId = #{infoId}
        </if>
        <if test="title != null">
            and title = #{title}
        </if>
        <if test="tags != null">
            and tags = #{tags}
        </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.userlogs.entry.Collections">
        select
            <include refid="column" />
        from op_collect_info
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findById" resultType="com.ddky.fms.refund.model.userlogs.entry.Collections">
        select
            <include refid="column" />
        from op_collect_info
        <where>
            coletId = #{id}
        </where>
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.userlogs.entry.Collections">
        insert into op_collect_info (userId, folderId, infoType, infoId, title, imageIndex, images, tags, createDate)
        values (#{userId}, #{folderId}, #{infoType}, #{infoId}, #{title}, #{imageIndex}, #{images}, #{tags}, now())
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into op_collect_info (userId, folderId, infoType, infoId, title, imageIndex, images, tags, createDate)
            values (#{item.userId}, #{item.folderId}, #{item.infoType}, #{item.infoId}, #{item.title}, #{item.imageIndex}, #{item.images}, #{item.tags}, now())
        </foreach>
    </insert>

</mapper>
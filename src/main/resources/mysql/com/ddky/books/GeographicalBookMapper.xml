<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.books.GeographicalBookMapper">

    <sql id="column">
        bookId, bookName, shortName, publisher, theYear, coverImage, cipImage, gradeId, createDate
    </sql>

    <sql id="where">
        <if test="bookName != null">
            and bookName = #{bookName}
        </if>
        <if test="shortName != null">
            and shortName = #{shortName}
        </if>
        <if test="publisher != null">
            and publisher = #{publisher}
        </if>
        <if test="theYear != null">
            and theYear = #{theYear}
        </if>
        <if test="gradeId != null">
            and gradeId = #{gradeId}
        </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.books.geographical.entry.GeographicalBook">
        select
            <include refid="column" />
        from bok_geographical_info
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findById" resultType="com.ddky.fms.refund.model.books.geographical.entry.GeographicalBook">
        select
            <include refid="column" />
        from bok_geographical_info
        <where>
            bookId = #{bookId}
        </where>
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.books.geographical.entry.GeographicalBook">
        insert into bok_geographical_info (bookName, shortName, publisher, theYear, coverImage, cipImage, gradeId, createDate)
        values (#{bookName}, #{shortName}, #{publisher}, #{theYear}, #{coverImage}, #{cipImage}, #{gradeId}, UNIX_TIMESTAMP())
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into bok_geographical_info (bookName, shortName, publisher, theYear, coverImage, cipImage, gradeId, createDate)
            values (#{item.bookName}, #{item.shortName}, #{item.publisher}, #{item.theYear}, #{item.coverImage}, #{item.cipImage}, #{item.gradeId}, UNIX_TIMESTAMP())
        </foreach>
    </insert>

    <update id="update" parameterType="com.ddky.fms.refund.model.books.geographical.entry.GeographicalBook">
        update bok_geographical_info
        <set>
            <if test="bookName != null">  bookName = #{bookName}, </if>
            <if test="shortName != null">  shortName = #{shortName}, </if>
            <if test="publisher != null">  publisher = #{publisher}, </if>
            <if test="theYear != null">  theYear = #{theYear}, </if>
            <if test="coverImage != null">  coverImage = #{coverImage}, </if>
            <if test="cipImage != null">  cipImage = #{cipImage}, </if>
            <if test="gradeId != null">  gradeId = #{gradeId}, </if>
        </set>
        <where>
            bookId = #{bookId}
        </where>
    </update>

    <delete id="delete" parameterType="java.util.List">
        delete from bok_geographical_info where id in (
        <foreach collection="idList" index="index" item="item" separator=",">
            #{item}
        </foreach>)
    </delete>

</mapper>
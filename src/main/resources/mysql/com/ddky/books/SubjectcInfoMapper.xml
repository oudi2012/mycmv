<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.books.SubjectInfoMapper">

    <sql id="column">
        subjectId, name, title, orderNo
    </sql>

    <sql id="where">
        <if test="name != null">
            and name = #{name}
        </if>
        <if test="title != null">
            and title = #{title}
        </if>
        <if test="orderNo != null">
            and orderNo = #{orderNo}
        </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.books.SubjectInfo">
        select
            <include refid="column" />
        from bok_subject_info
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findById" resultType="com.ddky.fms.refund.model.books.SubjectInfo">
        select
            <include refid="column" />
        from bok_subject_info
        <where>
            subjectId = #{id}
        </where>
    </select>

    <select id="findByName" resultType="com.ddky.fms.refund.model.books.SubjectInfo">
        select
        <include refid="column" />
        from bok_subject_info
        <where>
            name = #{name}
        </where>
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.books.SubjectInfo">
        insert into bok_subject_info (name, title, orderNo) values (#{name}, #{title}, #{orderNo})
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into bok_subject_info (name, title, orderNo)
            values (#{item.name}, #{item.title}, #{item.orderNo})
        </foreach>
    </insert>

    <update id="update" parameterType="com.ddky.fms.refund.model.books.SubjectInfo">
        update bok_subject_info
        <set>
            <if test="name != null">  name = #{name}, </if>
            <if test="title != null">  title = #{title}, </if>
            <if test="orderNo != null">  orderNo = #{orderNo}, </if>
        </set>
        <where>
            subjectId = #{subjectId}
        </where>
    </update>

    <delete id="delete" parameterType="java.util.List">
        delete from bok_subject_info where subjectId in (
        <foreach collection="idList" index="index" item="item" separator=",">
            #{item}
        </foreach>)
    </delete>

</mapper>
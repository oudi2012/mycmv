<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.books.ScoreCateMapper">

    <sql id="column">
        cateId, name, type, score, scoreDesc, orderNo
    </sql>

    <sql id="where">
        <if test="name != null">
            and name = #{name}
        </if>
        <if test="type != null">
            and  type = #{type}
        </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.books.entry.ScoreCate">
        select
            <include refid="column" />
        from stu_score_cate
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findById" resultType="com.ddky.fms.refund.model.books.entry.ScoreCate">
        select
            <include refid="column" />
        from stu_score_cate
        <where>
            id = #{id}
        </where>
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.books.entry.ScoreCate">
        insert into stu_score_cate (name, type, score, scoreDesc, orderNo) values (#{name}, #{type}, #{score}, #{scoreDesc}, #{orderNo})
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into stu_score_cate (name, type, score, scoreDesc, orderNo)
            values (#{item.name}, #{item.type}, #{item.score}, #{item.scoreDesc}, #{item.orderNo})
        </foreach>
    </insert>

</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.books.PoliticalBookMapper">

    <sql id="column">
        bookId, bookName, shortName, publisher, theYear, coverImage, cipImage, gradeId
    </sql>

    <sql id="where">
        <if test="bookName != null">
            bookName = #{bookName}
        </if>
        <if test="shortName != null">
            shortName = #{shortName}
        </if>
        <if test="publisher != null">
            publisher = #{publisher}
        </if>
        <if test="theYear != null">
            theYear = #{theYear}
        </if>
        <if test="gradeId != null">
            gradeId = #{gradeId}
        </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.books.political.entry.PoliticalBook">
        select
            <include refid="column" />
        from bok_political_info
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findById" resultType="com.ddky.fms.refund.model.books.political.entry.PoliticalBook">
        select
            <include refid="column" />
        from bok_political_info
        <where>
            bookId = #{bookId}
        </where>
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.books.political.entry.PoliticalBook">
        insert into bok_political_info (bookName, shortName, publisher, theYear, coverImage, cipImage, gradeId)
        values (#{bookName}, #{shortName}, #{publisher}, #{theYear}, #{coverImage}, #{cipImage}, #{gradeId})
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into bok_political_info (bookName, shortName, publisher, theYear, coverImage, cipImage, gradeId)
            values (#{item.bookName}, #{item.shortName}, #{item.publisher}, #{item.theYear}, #{item.coverImage}, #{item.cipImage}, #{item.gradeId})
        </foreach>
    </insert>

</mapper>
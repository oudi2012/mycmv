<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddky.fms.refund.mapper.images.ImageInfoMapper">

    <sql id="column">
        imageId, userId, imageCate, bussId, imageSrc, orderNo, createDate
    </sql>

    <sql id="where">
        <if test="userId != null">
            userId = #{userId}
        </if>
        <if test="imageCate != null">
            imageCate = #{imageCate}
        </if>
        <if test="bussId != null">
            bussId = #{bussId}
        </if>
    </sql>

    <select id="list" resultType="com.ddky.fms.refund.model.images.entry.ImageInfo">
        select
            <include refid="column" />
        from stu_image_info
        <where>
            <include refid="where" />
        </where>
    </select>

    <select id="findById" resultType="com.ddky.fms.refund.model.images.entry.ImageInfo">
        select
            <include refid="column" />
        from stu_image_info
        <where>
            imageId = #{id}
        </where>
    </select>

    <insert id="insert" parameterType="com.ddky.fms.refund.model.images.entry.ImageInfo">
        insert into stu_image_info (userId, imageCate, bussId, imageSrc, orderNo, createDate)
        values (#{userId}, #{imageCate}, #{bussId}, #{imageSrc}, #{orderNo}, now())
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            insert into stu_image_info (userId, imageCate, bussId, imageSrc, orderNo, createDate)
            values (#{item.userId}, #{item.imageCate}, #{item.bussId}, #{item.imageSrc}, #{item.orderNo}, now())
        </foreach>
    </insert>

</mapper>